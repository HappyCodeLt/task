<script type="text/javascript">

    container = document.getElementsByClassName("dribble")[0];
    var currentPage = 1;
    
    var loadShots = function() {
        var dataSrc = document.createElement("script");      
        dataSrc.src = "https://api.dribbble.com/shots/everyone?page=" + currentPage + "&per_page=12&callback=parseResponse";
        container.appendChild(dataSrc);
    }

    // First time, directly load the shots
    loadShots();
	

    function parseResponse(data) {

        for (i = 0; i < data.shots.length; i++) {
		
            var image = document.createElement("img");
            image.src = data.shots[i].image_url;
			
            var title = document.createElement("h1");
            title.innerHTML = data.shots[i].title;
						
			var playerName = document.createElement("h2");
            playerName.innerHTML = data.shots[i].player.name;
			
            var hr = document.createElement("hr");  
			title.appendChild(hr);			
			
            var imageTitle = document.createElement("div");
            imageTitle.className = "imageTitle";
			imageTitle.appendChild(title);
            imageTitle.appendChild(playerName);
			
            var button = document.createElement("div"); 
			button.className = "favourite";			
            button.innerHTML = "Favourite";            
			
            var imageContainer = document.createElement("div");            
            imageContainer.className = "gradient";
            imageContainer.appendChild(image);  

			var p = document.createElement("p");
			p.appendChild(imageContainer);
            p.appendChild(button);
            p.appendChild(imageTitle);			
            
            container.appendChild(p);    

			button.addEventListener("click", function() {
				var auth = document.getElementById("auth");
                auth.submit();
            });			
        }
		
		
    }

    // Check if user is at the bottom of the page and load more shots
    window.onscroll = function() {
        var docHeight = document.body.offsetHeight;
        docHeight = docHeight == undefined ? window.document.documentElement.scrollHeight : docHeight;

        var winheight = window.innerHeight;
        winheight = winheight == undefined ? document.documentElement.clientHeight : winheight;

        var scrollpoint = window.scrollY;
        scrollpoint = scrollpoint == undefined ? window.document.documentElement.scrollTop : scrollpoint;

        if ((scrollpoint + winheight) >= docHeight) {
            currentPage++;

            if (currentPage > 15) {              
                return false;
            }

            loadShots();
        }
    };

</script>

